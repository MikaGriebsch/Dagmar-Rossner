<style>
    .searchbar {
        position: absolute;
        padding-left: 80%;

    }

    .form button {
        border: none;
        background: none;
        color: #8b8ba7;
    }
    .form {
        --timing: 1s;
        --width-of-input: 7vw;
        --expanded-width: 14vw;
        --height-of-input: 40px;
        --border-height: 2px;
        --input-bg: #fff;
        --border-color: var(--accent);
        --border-radius: 30px;
        --after-border-radius: 1px;

        position: relative;
        width: var(--width-of-input);
        height: var(--height-of-input);
        display: flex;
        align-items: center;
        padding-inline: 0.8em;

        border: var(--border-height) solid var(--border-color);
        border-radius: var(--border-radius);
        transition: width var(--timing), border-radius var(--timing);
        background: var(--input-bg, #fff);
    }

    .form:focus-within {
        width: var(--expanded-width);
        border-radius: var(--after-border-radius);
    }

    .input {
        font-size: 0.9rem;
        background-color: transparent;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        border: none;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }


    input:focus {
        outline: none;
    }

    .form:focus-within:before {
        transform: scale(1);
    }

    .reset {
        border: none;
        background: none;
        opacity: 0;
        visibility: hidden;
    }

    input:not(:placeholder-shown) ~ .reset {
        opacity: 1;
        visibility: visible;
    }
    
    .form svg {
        width: 17px;
        margin-top: 3px;
    }
header {
    margin: 0;
    padding: 0 1em;
    background: white;
    font-weight: 200;
    font-size: 2vh;
    position: relative; /* Hinzugefügt */
    z-index: 1000;      /* Hinzugefügt für Layering über geblurrtem Inhalt */
}

nav {
    display: flex;
    align-items: center;
    justify-content: center; 
    height: 90px;
}

.internal-links {
    display: flex;
}

.logo {
    display: flex;
    justify-content: center;
    flex: 0 1 auto; 
    margin: 0px 20px;
}

.logo img {
    width: 80px;
}

nav a {
    position: relative;
    padding: 0.5em;
    color: var(--black);
    text-decoration: none;
    display: inline-block;
    line-height: 1;
}

nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
    color: var(--accent); 
}

nav a::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background-color: var(--accent);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.5s ease;
}

nav a.active::before,
nav a:hover::before {
    transform: scaleX(1);
    transform-origin: bottom left;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger .bar {
    height: 3px;
    width: 30px;
    background-color: var(--accent);
    margin: 4px 0;
    transition: 0.4s;
    border-radius: 10px;
}

.hamburger.open .bar:nth-child(1) {
    transform: rotate(45deg);
    top: 8px;
    position: relative;
}

.hamburger.open .bar:nth-child(2) {
    opacity: 0;
}

.hamburger.open .bar:nth-child(3) {
    transform: rotate(-45deg);
    top: -14px;
    position: relative;
}

.mobile-menu {
    display: none;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 80px; 
    left: 0;
    width: 100%;
    background-color: #FFFFFF;
    z-index: 1;
    color: var(--black);
    font-size: 20px;
}

@keyframes slideDown {
    from {
        transform: translateY(-20px); 
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes slideIn {
    from {
        transform: translateX(0px);
        opacity: 0;
    }
    to {
        transform: translateX(50px);
        opacity: 1;
    }
}

@media (max-width: 720px) {
    .internal-links {
        display: none;
    }
    nav {
        display: flex;
        justify-content: space-between;
        padding-right: 5%;
    }
    .hamburger {
        margin-right: 0px;
        display: flex;
    }
    .logo {
        margin-left: 0px;
    }
    .mobile-menu a {
        color: black;
    }
    .mobile-menu a.active {
        color: var(--accent) !important;
        text-decoration: none;
    }
    .searchbar {
        padding-left: 20%;
        form:focus-within {
            width: 50vw;
        }
    }

}

.mobile-menu.active {
    display: flex;
    animation: slideDown 0.5s ease forwards;
}

</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const hamburger = document.querySelector('.hamburger');
        const mobileMenu = document.querySelector('.mobile-menu');

        if (hamburger && mobileMenu) {
            hamburger.addEventListener('click', () => {
                hamburger.classList.toggle('open');
                mobileMenu.classList.toggle('active');
                // Toggle blur class on body
                if (mobileMenu.classList.contains('active')) {
                    document.body.classList.add('menu-open-blur');
                } else {
                    document.body.classList.remove('menu-open-blur');
                }
            });
        }

        // Logic for active links
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll('nav a, .mobile-menu a');

        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });
</script>
