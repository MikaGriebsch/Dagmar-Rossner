---
import { Image } from 'astro:assets';
import teamImage from '../assets/images/Team.AVIF';
---

<div class="container">
    <div class="left">
        <Image alt="Team-Bild" src={teamImage} width={800} height={600} class="bottom-image" />
    </div>
    <div class="right">
        <div class="zeiten">
            <p class="header-serif">Öffnungszeiten</p>
            <p class="header-serif-mobile">Öffnungszeiten</p>
            <div class="time-row">
                <span>Montag</span>
                <span>08:00-12:00</span>
            </div>
            <div class="time-row">
                <span>Dienstag</span>
                <span>08:00-12:00, 14:00-18:00</span>
            </div>
            <div class="time-row">
                <span>Mittwoch</span>
                <span>08:00-12:00</span>
            </div>
            <div class="time-row">
                <span>Donnerstag</span>
                <span>08:00-12:00, 14:00-18:00</span>
            </div>
            <div class="time-row">
                <span>Freitag</span>
                <span>08:00-12:00</span>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
    display: flex;
    height: auto; 
    flex-direction: row;
    margin-bottom: 2vh;
}

.left {
    width: 60%;
    display: flex;
    align-items: flex-end;
    background-color: var(--accent);
    justify-content: center;
    margin-bottom: 1vh;
}

.right {
    width: 40%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
}

.zeiten {
    background-color: white;
    padding: 3%;
    margin-bottom: 3vh; 
    height: auto; 
    border-radius: 5px;
}

.time-row {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-bottom: 8px; 
    line-height: 1.5; 
}

.time-row span {
    padding-left: 10px;
    padding-right: 10px;
}

.bottom-image {
    max-width: 100%;
    height: auto;
}

.header-serif-mobile {
    display: none;
}

.header-serif {
    color: black;
    padding-left: 10px;
}

@media (max-width: 720px) {
    .header-serif-mobile {
        display: block;
        color: black;
        text-align: center;
        margin-bottom: 1vh; 
    }

    .header-serif {
        display: none !important;
    }
}

@media (max-width: 1200px) {
    .container {
        flex-direction: column;
        width: 100%;
        margin-bottom: 5vh; 
    }

    .left {
        width: 100%;
        margin-bottom: 2vh; 
    }

    .right {
        width: 100%;
        height: auto;
        margin-bottom: 0vh; 
        padding: 0 ;
    }

    .zeiten {
        height: auto;
        padding: 5%; 
        margin-bottom: 0%; 
    }

    .header-serif {
        display: flex;
        justify-content: center;
        margin-bottom: 1vh;
    }
}

</style>
